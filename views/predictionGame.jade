                            div(class="col-xs-4 col-lg-5")
                            div(class="col-xs-4 col-lg-2")
                                div
                                    a(ng-show="game.rounds[game.myPlayerIndex].length == 0" class="btn btn-default btn-block btn-lg" ng-click="verify(6) && send()") send 6
                                div
                                    a(ng-show="game.rounds[game.myPlayerIndex].length == 1" class="btn btn-default btn-block btn-lg" ng-click="verify(4) && send()") send 4
                        p

